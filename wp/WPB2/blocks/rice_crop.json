{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "dec:rice_crop",
            "properties": {
                "dec:growth_stage": [0, 1, 2, 3, 4, 5]
            }
        },
		
        "components": {
            "minecraft:geometry": "geometry.crop.hash",
            "minecraft:entity_collision": false,
            "minecraft:pick_collision": {
                "origin": [-8,0,-8],
                "size": [16,16,16]
            },
            "minecraft:destroy_time": 0.001,
            "minecraft:friction": 0.2,
            "minecraft:map_color": "#8FE08B",
            "minecraft:block_light_absorption": 0.0,
            "minecraft:loot": "loot_tables/blocks/rice_crop.json",
            "minecraft:on_interact": {
                "event": "meal",
                "condition": "query.get_equipped_item_name('main_hand') == 'bone_meal'"
            },
            "minecraft:random_ticking": {
                "on_tick": {
                    "event": "grow_stage"
                }
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": ["up"],
                        "block_filter": ["farmland"]
                    }
                ]
            }
        },
        "events": {
            "grow_stage": {
                "randomize": [
                    {
                        "weight": 1
                    },
                    {
                        "weight": 1,
                        "set_block_property": {
                            "dec:growth_stage": "(query.block_property('dec:growth_stage')<5) ? query.block_property('dec:growth_stage') + 1 : 5"
                        }
                    }
                ]
            },
            "meal": {
                "sequence": [
                    {
                        "decrement_stack": {}
                    },
                    {
                        "run_command": {
                            "command": [
                                "particle minecraft:crop_growth_emitter ~~~"
                            ]
                        }
                    },
                    {
                        "trigger": {
                            "event": "grow_stage"
                        }
                    }
                ]
            }
        },
        "permutations": [
            {
                "condition": "query.block_property('dec:growth_stage') == 0",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "rice_crop_0",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-5,0,-5],
                        "size": [10,5,10]
                    },
					"minecraft:loot": "loot_tables/empty.json"
                }
            },
            {
                "condition": "query.block_property('dec:growth_stage') == 1",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "rice_crop_1",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-5,0,-5],
                        "size": [10,5,10]
                    },
					"minecraft:loot": "loot_tables/empty.json"
                }
            },
            {
                "condition": "query.block_property('dec:growth_stage') == 2",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "rice_crop_2",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-6.5,0,-6.5],
                        "size": [12,7,12]
                    },
					"minecraft:loot": "loot_tables/empty.json"
                }
            },
            {
                "condition": "query.block_property('dec:growth_stage') == 3",
