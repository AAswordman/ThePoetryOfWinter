{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "dec:trellis",
            "properties": {
                "dec:is_bottom": [
                    true,
                    false
                ],
                "dec:is_top": [
                    true,
                    false
                ],
                "dec:may_wither": [
                    true,
                    false
                ],
                "dec:crop_type": [
                    "empty",
                    "wither",
                    "grape"
                ],
                "dec:growth_stage": [
                    0,
                    1,
                    2,
                    3,
                    4
                ]
            }
        },
        "components": {
            "minecraft:creative_category": {
                "group": "itemGroup.name.outside",
                "category": "items"
            },
            "minecraft:breathability": "air",
            "minecraft:entity_collision": true,
            "minecraft:material_instances": {
                "*": {
                    "texture": "empty",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": [
                            "up"
                        ],
                        "block_filter": [
                            "farmland",
                            "trellis"
                        ]
                    }
                ]
            },
            "minecraft:map_color": "#A36FD5",
            "minecraft:loot": "loot_tables/blocks/trellis.json",
            "minecraft:light_emission": 0.0,
            "minecraft:light_dampening": 0.0,
            "minecraft:destroy_time": 0.7,
            "tag:wood": {}
        },
        "permutations": [
            {
                "condition": "query.block_state('dec:is_bottom')",
                "components": {
                    "minecraft:material_instances": {
                        "trellis_bottom": {
                            "texture": "trellis",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:entity_collision": {
                        "origin": [
                            -6,
                            0,
                            -6
                        ],
                        "size": [
                            12,
                            16,
                            12
                        ]
                    },
                    "minecraft:pick_collision": {
                        "origin": [
                            -6,
                            0,
                            -6
                        ],
                        "size": [
                            12,
                            16,
                            12
                        ]
                    },
                    "minecraft:geometry": "geometry.trellis.bottom"
                }
            },
            {
                "condition": "!query.block_state('dec:is_bottom')",
                "components": {
                    "minecraft:material_instances": {
                        "trellis_bottom": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:entity_collision": {
                        "origin": [
                            -6,
                            0,
                            -6
                        ],
                        "size": [
                            12,
                            16,
                            12
                        ]
                    },
                    "minecraft:pick_collision": {
                        "origin": [
                            -6,
                            0,
                            -6
                        ],
                        "size": [
                            12,
                            16,
                            12
                        ]
                    },
                    "minecraft:geometry": "geometry.trellis"
                }
            },
            {
                "condition": "query.block_state('dec:is_top')",
                "components": {
                    "minecraft:material_instances": {
                        "trellis": {
                            "texture": "trellis",
                            "render_method": "alpha_test"
                        },
                        "trellis_top": {
                            "texture": "trellis",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "!query.block_state('dec:is_top')",
                "components": {
                    "minecraft:material_instances": {
                        "trellis": {
                            "texture": "trellis",
                            "render_method": "alpha_test"
                        },
                        "trellis_top": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') == 'empty' && query.block_state('dec:is_bottom')",
                "components": {
                    "minecraft:material_instances": {
                        "crop": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        },
                        "crop_top": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:on_interact": {
                        "event": "plant"
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') != 'empty'",
                "components": {
                    "minecraft:on_interact": {
                        "event": "interact"
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') != 'empty' && query.block_state('dec:crop_type') != 'wither'",
                "components": {
                    "minecraft:on_interact": {
                        "event": "interact"
                    },
                    "minecraft:random_ticking": {
                        "on_tick": {
                            "event": "grow"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') == 'wither' && query.block_state('dec:is_top')",
                "components": {
                    "minecraft:material_instances": {
                        "crop": {
                            "texture": "trellis_crop_wither",
                            "render_method": "alpha_test"
                        },
                        "crop_top": {
                            "texture": "trellis_crop_wither",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') == 'wither' && !query.block_state('dec:is_top')",
                "components": {
                    "minecraft:material_instances": {
                        "crop": {
                            "texture": "trellis_crop_wither",
                            "render_method": "alpha_test"
                        },
                        "crop_top": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        }
                    }
                }
            }, 
            {
                "condition": "query.block_state('dec:crop_type') == 'grape' && query.block_state('dec:growth_stage') == 0 && query.block_state('dec:is_top')",
                "components": {
                    "minecraft:material_instances": {
                        "crop": {
                            "texture": "grape_crop_0",
                            "render_method": "alpha_test"
                        },
                        "crop_top": {
                            "texture": "grape_crop_0",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') == 'grape' && query.block_state('dec:growth_stage') == 0 && !query.block_state('dec:is_top')",
                "components": {
                    "minecraft:material_instances": {
                        "crop": {
                            "texture": "grape_crop_0",
                            "render_method": "alpha_test"
                        },
                        "crop_top": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') == 'grape' && query.block_state('dec:growth_stage') == 1 && query.block_state('dec:is_top')",
                "components": {
                    "minecraft:material_instances": {
                        "crop": {
                            "texture": "grape_crop_1",
                            "render_method": "alpha_test"
                        },
                        "crop_top": {
                            "texture": "grape_crop_1",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') == 'grape' && query.block_state('dec:growth_stage') == 1 && !query.block_state('dec:is_top')",
                "components": {
                    "minecraft:material_instances": {
                        "crop": {
                            "texture": "grape_crop_1",
                            "render_method": "alpha_test"
                        },
                        "crop_top": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        }
                    }
                }
            }
        ],
        "events": {
            "interact": {
                "sequence": [
                    {
                        "condition": "query.get_equipped_item_name('main_hand') == 'shears'",
                        "sequence": [
                            {
                                "decrement_stack": {},
                                "run_command": {
                                    "command": [
                                        "playsound mob.sheep.shear @a ~~~",
                                        "scriptevent dec:trellis wither"
                                    ]
                                },
                                "set_block_state": {
                                    "dec:crop_type": "'empty'"
                                }
                            }
                        ]
                    },
                    {
                        "condition": "query.get_equipped_item_name('main_hand') == 'bone_meal'",
                        "sequence": [
                            {
                                "decrement_stack": {},
                                "run_command": {
                                    "command": [
                                        "particle minecraft:crop_growth_emitter ~~~"
                                    ]
                                },
                                "trigger": {
                                    "event": "grow"
                                }
                            }
                        ]
                    }
                ]
            },
            "plant": {
                "sequence": [
                    {
                        "condition": "query.get_equipped_item_name('main_hand') == 'apple'",
                        "sequence": [
                            {
                                "decrement_stack": {},
                                "set_block_state": {
                                    "dec:crop_type": "'grape'",
                                    "dec:may_wither": false,
                                    "dec:growth_stage": 0
                                }
                            }
                        ]
                    }
                ]
            },
            "grow": {
                "sequence": [
                    {
                        "condition": "query.block_state('dec:crop_type') == 'grape' && query.block_state('dec:growth_stage') < 1",//作物多了这里写三元运算符
                        "sequence": [
                            {
                                "condition": "!query.block_state('dec:may_wither')",
                                "sequence": [
                                    {
                                        "set_block_state": {
                                            "dec:growth_stage": "query.block_state('dec:growth_stage') + 1"
                                        }
                                    }
                                ]
                            },
                            {
                                "condition": "query.block_state('dec:may_wither')",
                                "sequence": [
                                    {
                                        "set_block_state": {
                                            "dec:crop_type": "'wither'",
                                            "dec:growth_stage": 0
                                        },
                                        "run_command": {
                                            "command": [
                                                "scriptevent dec:trellis wither_spread"
                                            ]
                                        }
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "condition": "query.block_state('dec:crop_type') == 'grape' && query.block_state('dec:growth_stage') == 1",//作物多了这里写三元运算符
                        "sequence": [
                            {
                                "condition": "query.block_state('dec:may_wither')",
                                "sequence": [
                                    {
                                        "set_block_state": {
                                            "dec:crop_type": "'wither'",
                                            "dec:growth_stage": 0
                                        },
                                        "run_command": {
                                            "command": [
                                                "scriptevent dec:trellis wither_spread"
                                            ]
                                        }
                                    }
                                ]
                            },
                            {
                                "condition": "!query.block_state('dec:may_wither')",
                                "sequence": [
                                    {
                                        "run_command": {
                                            "command": [
                                                "scriptevent dec:trellis grow_spread"
                                            ]
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    }
}