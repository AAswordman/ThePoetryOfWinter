{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "dec:leek_crop",
            "properties": {
                "dec:growth_stage": [0, 1, 2]
            }
        },
		
        "components": {
            "minecraft:geometry": "geometry.crop.hash",
            "minecraft:entity_collision": false,
            "minecraft:pick_collision": {
                "origin": [-8,0,-8],
                "size": [16,16,16]
            },
            "minecraft:destroy_time": 0.001,
            "minecraft:map_color": "#8FE08B",
            "minecraft:light_dampening": 0.0,
            "minecraft:loot": "loot_tables/blocks/leek_crop.json",
            "minecraft:random_ticking": {
                "on_tick": {
                    "event": "grow_stage"
                }
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": ["up"],
                        "block_filter": ["farmland"]
                    }
                ]
            },
			"minecraft:breathability": "air"
        },
        "events": {
            "grow_stage": {
                "randomize": [
                    {
                        "weight": 1
                    },
                    {
                        "weight": 1,
                        "set_block_property": {
                            "dec:growth_stage": "(query.block_property('dec:growth_stage')<2) ? query.block_property('dec:growth_stage') + 1 : 2"
                        }
                    }
                ]
            },
            "final_drop": {
                "spawn_loot": {
                    "table": "loot_tables/blocks/leek_crop.json"
                },
				"set_block": {
					"block_type": "dec:leek_crop"
				}
            },
            "meal": {
                "sequence": [
                    {
                        "decrement_stack": {}
                    },
                    {
                        "run_command": {
                            "command": [
                                "particle minecraft:crop_growth_emitter ~~~"
                            ]
                        }
                    },
                    {
                        "trigger": {
                            "event": "grow_stage"
                        }
                    }
                ]
            }
        },
        "permutations": [
            {
                "condition": "query.block_property('dec:growth_stage') == 0",
                "components": {
                    "minecraft:on_interact": {
                        "event": "meal",
                        "condition": "query.get_equipped_item_name('main_hand') == 'bone_meal'"
                    },
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "leek_crop_0",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-5,0,-5],
                        "size": [10,4,10]
                    },
					"minecraft:loot": "loot_tables/empty.json"
                }
            },
            {
                "condition": "query.block_property('dec:growth_stage') == 1",
                "components": {
                    "minecraft:on_interact": {
                        "event": "meal",
                        "condition": "query.get_equipped_item_name('main_hand') == 'bone_meal'"
                    },
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "leek_crop_1",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-5,0,-5],
                        "size": [10,7,10]
                    },
					"minecraft:loot": "loot_tables/empty.json"
                }
            },
            {
                "condition": "query.block_property('dec:growth_stage') == 2",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "leek_crop_2",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [-8,0,-8],
                        "size": [16,12,16]
                    },
                    "minecraft:loot": "loot_tables/blocks/leek_crop.json",
                    "minecraft:on_interact": {
                        "event": "final_drop",
                        "target": "self"
                    }
                }
            }
        ]
    }
}