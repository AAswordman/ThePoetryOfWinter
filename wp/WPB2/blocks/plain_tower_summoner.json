{
  "format_version": "1.16.0",
  "minecraft:block": {
    "description": {
      "identifier": "dec:plain_tower_summoner"
    },
    "components": {
		  "minecraft:creative_category": {
        "group": "itemGroup.name.outside",
				"category": "items"
			},
      "minecraft:light_dampening": 15,
      "minecraft:light_emission": 0,
      "minecraft:destroy_time": 3.0,
      "minecraft:explosion_resistance": 100,
      "minecraft:map_color": "#2E539C",
      "minecraft:loot": "loot_tables/empty.json",
      "minecraft:on_interact": {
        "event": "activate",
        "condition": "query.get_equipped_item_name('main_hand') == 'lapis_lazuli'"
      },
      "minecraft:ticking": {
        "looping": true,
        "range": [
          600,
          1200
        ],
        "on_tick": {
          "event": "minecraft:activate_naturally"
        }
      }
    },
    "events": {
      "activate": {
        "set_block": {
          "block_type": "dec:plain_tower_summoner_activated"
        },
        "run_command": {
          "command": [
            "playsound conduit.activate @a ~~~"
          ]
        },
        "decrement_stack": {}
      },
      "activate_naturally": {
        "set_block": {
          "block_type": "dec:plain_tower_summoner_activated"
        },
        "run_command": {
          "command": [
            "playsound conduit.activate @a ~~~"
          ]
        }
      }
    }
  }
}