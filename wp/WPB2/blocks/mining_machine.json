{
  "format_version": "1.16.0",
  "minecraft:block": {
    "description": {
      "identifier": "dec:mining_machine"
    },
    "components": {
		  "minecraft:creative_category": {
        "group": "itemGroup.name.outside",
				"category": "items"
			},
      "minecraft:block_light_absorption": 1,
      "minecraft:block_light_emission": 0,
      "minecraft:destroy_time": 3,
      "minecraft:explosion_resistance": 10,
      "minecraft:map_color": "#3C3B3B",
      "minecraft:loot": "loot_tables/blocks/mining_machine.json",
      "tag:stone": {},
      "minecraft:on_interact": {
        "event": "activate",
        "condition": "query.get_equipped_item_name('main_hand') == 'pluse_stone'"
      }
    },
    "events": {
      "activate": {
        "run_command": {
          "command": [
            "fill ~-1~-1~-1~1 0 ~1 air 0 replace gravel 0",
            "fill ~-1~-1~-1~1 0 ~1 air 0 replace stone -1",
            "fill ~-1~-1~-1~1 0 ~1 air 0 replace dirt -1",
            "fill ~-1~-1~-1~1 0 ~1 air 0 replace sand -1",
            "fill ~-1~-1~-1~1 0 ~1 air 0 replace end_stone 0",
            "fill ~-1~-1~-1~1 0 ~1 air 0 replace grass 0",
            "fill ~-1~-1~-1~1 0 ~1 air 0 replace netherrack 0"
          ]
        },
        "decrement_stack": {}
      }
    }
  }
}