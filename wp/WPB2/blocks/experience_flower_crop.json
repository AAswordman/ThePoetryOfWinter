{
    "format_version": "1.16.100",
    "minecraft:block": {
        "description": {
            "identifier": "dec:experience_flower_crop",
            "properties": {
                "dec:growth_stage": [
                    0,
                    1,
                    2
                ]
            }
        },
        "components": {
			"minecraft:breathability": "air",
            "minecraft:geometry": "geometry.crop.sparse.on_dirt",
            "minecraft:entity_collision": false,
            "minecraft:pick_collision": {
                "origin": [
                    -3,
                    0,
                    -3
                ],
                "size": [
                    6,
                    13,
                    6
                ]
            },
            "minecraft:destroy_time": 0.001,
            "minecraft:map_color": "#9DDF7B",
            "minecraft:light_dampening": 0.0,
            "minecraft:loot": "loot_tables/blocks/experience_flower_crop.json",
            "minecraft:on_interact": {
                "event": "meal",
                "condition": "query.get_equipped_item_name('main_hand') == 'bone_meal'"
            },
            "minecraft:random_ticking": {
                "on_tick": {
                    "event": "grow_stage"
                }
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": [
                            "up"
                        ],
                        "block_filter": [
                            "grass"
                        ]
                    }
                ]
            }
        },
        "events": {
            "drop_exp": {
                "randomize": [
                    {
                        "weight": 1,
                        "run_command": {
                            "command": [
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb"
                            ]
                        }
                    },
                    {
                        "weight": 1,
                        "run_command": {
                            "command": [
                                
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb",
                                "summon xp_orb"
                            ]
                        }
                    }
                ]
			},
            "grow_stage": {
                "randomize": [
                    {
                        "weight": 1
                    },
                    {
                        "weight": 1,
                        "set_block_state": {
                            "dec:growth_stage": "(query.block_state('dec:growth_stage')<2) ? query.block_state('dec:growth_stage') + 1 : 2"
                        }
                    }
                ]
            },
            "meal": {
                "sequence": [
                    {
                        "decrement_stack": {}
                    },
                    {
                        "run_command": {
                            "command": [
                                "particle minecraft:crop_growth_emitter ~~~"
                            ]
                        }
                    },
                    {
                        "trigger": {
                            "event": "grow_stage"
                        }
                    }
                ]
            }
        },
        "permutations": [
            {
                "condition": "query.block_state('dec:growth_stage') == 0",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "experience_flower_stage_0",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [
                            -1,
                            0,
                            -1
                        ],
                        "size": [
                            2,
                            5,
                            2
                        ]
                    },
                    "minecraft:loot": "loot_tables/empty.json"
                }
            },
            {
                "condition": "query.block_state('dec:growth_stage') == 1",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "experience_flower_stage_1",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [
                            -2,
                            0,
                            -2
                        ],
                        "size": [
                            4,
                            8,
                            4
                        ]
                    },
                    "minecraft:loot": "loot_tables/empty.json"
                }
            },
            {
                "condition": "query.block_state('dec:growth_stage') == 2",
                "components": {
                    "minecraft:on_player_destroyed": {
                        "event": "drop_exp"
                    },
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "experience_flower_stage_2",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:pick_collision": {
                        "origin": [
                            -3,
                            0,
                            -3
                        ],
                        "size": [
                            6,
                            13,
                            6
                        ]
                    },
                    "minecraft:loot": "loot_tables/blocks/experience_flower_crop.json"
                }
            }
        ]
    }
}