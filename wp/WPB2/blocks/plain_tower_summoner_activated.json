{
  "format_version": "1.16.0",
  "minecraft:block": {
    "description": {
      "identifier": "dec:plain_tower_summoner_activated"
    },
    "components": {
      "minecraft:light_dampening": 15,
      "minecraft:light_emission": 7,
      "minecraft:destroy_time": 3.0,
      "minecraft:explosion_resistance": 100,
      "minecraft:map_color": "#719EF2",
      "minecraft:loot": "loot_tables/empty.json",
      "minecraft:on_interact": {
        "event": "summon",
        "condition": "query.get_equipped_item_name('main_hand') == 'mysterious_key'"
      }
    },
    "events": {
      "summon": {
        "play_sound": {
          "target": "other",
          "sound": "conduit.activate"
        },
        "set_block": {
          "block_type": "dec:plain_tower_summoner"
        },
        "run_command": {
          "command": [
            "tellraw @a { \"rawtext\" : [ { \"translate\" : \"text.dec:summon_king_of_pillager.name\" } ] }",
            "summon dec:king_of_pillager ~~1~",

            "fill ~-4~~-4 ~-1~9~4 air 0 destroy",
            "fill ~~~1 ~4~9~4 air 0 destroy",
            "fill ~1~~ ~4~9~-4 air 0 destroy",
            "fill ~~~-1 ~~9~-4 air 0 destroy",
            "fill ~~1~ ~~9~ air 0 destroy"
          ]
        },
        "decrement_stack": {}
      }
    }
  }
}