{
  "format_version": "1.8.0",
  "animation_controllers": {
    "controller.animation.player.wb.help": {
      "states": {
        "default": {
          "on_entry": [
            "/tag @s remove wbjcks"
          ],
          "transitions": [
            {
              "help": "query.is_using_item&&query.get_equipped_item_name == 'wb_help'"
            }
          ]
        },
        "help": {
          "on_entry": [
            "/title @s times 20 100 10",
            "/title @s subtitle 欢迎使用《冬之纪行诗》",
            "/title @s title 界面介绍",
            "/tag @s add wbjcks",
            "variable.use_time=query.life_time;"
          ],
          "transitions": [
            {
              "help1": "query.life_time-variable.use_time>=6.5"
            }
          ]
        },
        "help1": {
          "on_entry": [
            "/title @s times 20 40 10",
            "/title @s subtitle 左上角三个条子分别是",
            "/title @s title 界面介绍",
            "variable.use_time=query.life_time;"
          ],
          "transitions": [
            {
              "help2": "query.life_time-variable.use_time>=3"
            }
          ]
        },
        "help2": {
          "on_entry": [
            "/title @s times 20 100 10",
            "/title @s subtitle 法力值、武器冷却、盔甲被动冷却",
