{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "dec:predators",
      "runtime_identifier": "minecraft:bat",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "scripts": {
        "animate": [
          {
            "summon": "query.variant == 1"
          },
          {
            "attack": "query.variant == 0"
          }
        ]
      },
      "animations": {
        "summon": "animation.predators.summon",
        "attack": "animation.predators.attack"
      }
    },

    "component_groups": {
      "minecraft:despawn": {
        "minecraft:instant_despawn": {}
      },
      "minecraft:spawn": {
        "minecraft:timer": {
          "looping": false,
          "time": 5,
          "time_down_event": {
            "event": "minecraft:change_attack"
          }
        }
      },
      "minecraft:summon_mode": {
        "minecraft:variant": {
          "value": 1
        },
        "minecraft:timer": {
          "looping": false,
          "time": 5,
          "time_down_event": {
            "event": "minecraft:change_attack"
          }
        }
      },
      "minecraft:attack_mode": {
        "minecraft:variant": {
          "value": 0
        },
        "minecraft:movement.glide": {
          "start_speed": 0.8,
          "speed_when_turning": 0.6
        },
        "minecraft:behavior.swoop_attack": {
          "priority": 2,
          "delay_range": [ 5.0, 5.0 ]
        },
        "minecraft:behavior.circle_around_anchor": {
          "priority": 3,
          "radius_range": [ 5.0, 9.0 ],
          "radius_change_chance": 150,
          "height_above_target_range": [ 3.0, 6.0 ],
          "height_offset_range": [ -4.0, 5.0 ],
          "height_change_chance": 250,
          "goal_radius": 1.0
        },
        "minecraft:timer": {
          "looping": false,
          "time": 20,
          "time_down_event": {
            "event": "minecraft:change_attack"
          }
        }
      }
    },
    
    "components": {
      "minecraft:despawn": {
        "despawn_from_distance": {
          "min_distance": 64,
          "max_distance": 64
        }
      },
      "minecraft:fire_immune": true,
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 200 : 0"
      },
      "minecraft:type_family": {
        "family": [ "bat", "predators", "monster", "boss", "mob" ]
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/predators.json"
      },
      "minecraft:nameable": {
      },
      "minecraft:health": {
        "value": 300,
        "max": 300
      },
      "minecraft:physics": {
        "has_gravity": false
      },
      "minecraft:attack": {
        "damage": 12
      },
      "minecraft:breathable": {
        "totalSupply": 15,
        "suffocateTime": 0,
        "breathesAir": true,
        "breathesWater": false
      },
      "minecraft:collision_box": {
        "width": 2.5,
        "height": 4.5
      },
      "minecraft:movement": {
        "value": 1.0
      },
      "minecraft:follow_range": {
        "value": 256,
        "max": 256
      },
      "minecraft:boss": {
        "should_darken_sky": false,
        "name":"boss.dec:predators.name",
        "hud_range": 64
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 1,
        "within_radius": 256,
        "reselect_targets": true,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "player"
            },
            "max_dist": 64
          }
        ],
        "must_see": false,
        "must_see_forget_duration": 0.5,
        "scan_interval": 5,
        "target_search_height": 80.0
      }
    },
    
    "events": {
      "minecraft:despawn": {
        "add": {
          "component_groups": [
            "minecraft:despawn"
          ]
        }
      },
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "minecraft:spawn"
            ]
          }
        },
        "minecraft:change_attack": {
          "sequence": [
            {
             "randomize": [
               {
                 "weight": 1,
                 "remove": { "component_groups": [ "minecraft:summon_mode", "minecraft:attack_mode", "minecraft:spawn" ] },
                 "add": { "component_groups": [ "minecraft:summon_mode" ] }
               },
               {
                 "weight": 1,
                 "remove": { "component_groups": [ "minecraft:summon_mode", "minecraft:attack_mode", "minecraft:spawn" ] },
                 "add": { "component_groups": [ "minecraft:attack_mode" ] }
               }
             ]
           }
        ]
      }
    }
  }
}