{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "dec:chest_monster",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },

    "component_groups": {
      "minecraft:calm": {

      },
      "minecraft:angry": {
        "minecraft:loot": {
          "table": "loot_tables/entities/chest_monster.json"
        },
        "minecraft:behavior.melee_attack": {
          "priority": 4,
          "speed_multiplier": 1.0,
          "track_target": true
        },
        "minecraft:attack": {
          "damage": 7
        }
      }
    },


    "components": {
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "reselect_targets": true,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "player"
            },
            "max_dist": 32
          },
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "villager"
            },
            "max_dist": 32
          },
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "irongolem"
            },
            "max_dist": 32
          }
        ],
        "must_see": true
      },
      "minecraft:knockback_resistance": {
        "value": 1.0
      },
      "minecraft:target_nearby_sensor": {
        "inside_range": 8,
        "outside_range": 32,
        "must_see": true,
        "on_inside_range": {
          "event": "minecraft:become_angry",
          "target": "self"
        },
        "on_outside_range": {
          "event": "minecraft:become_calm",
          "target": "self"
        },
        "on_vision_lost_inside_range": {
          "event": "minecraft:become_calm",
          "target": "self"
        }
      },
      "minecraft:nameable": {
      },
      "minecraft:type_family": {
        "family": [ "monster", "undead" ]
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },
      "minecraft:collision_box": {
        "width": 1,
        "height": 1
      },
      "minecraft:health": {
        "value": {
          "range_min": 30,
          "range_max": 50
        }
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:movement": {
        "value": 0.4
      },
      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_damage_blocks": true
      },
      "minecraft:movement.basic": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:behavior.float": {
        "priority": 0
      },
      "minecraft:behavior.mount_pathing": {
        "priority": 1,
        "speed_multiplier": 1.25,
        "target_dist": 0,
        "track_target": true
      },
      "minecraft:behavior.stay_while_sitting": {
        "priority": 3
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      }
    },


    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "minecraft:calm"
          ]
        }
      },
      "minecraft:become_calm": {
        "remove": {
          "component_groups": [
            "minecraft:angry"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:calm"
          ]
        }
      },
      "minecraft:become_angry": {
        "add": {
          "component_groups": [
            "minecraft:angry"
          ]
        },
        "remove": {
          "component_groups": [
            "minecraft:calm"
          ]
        }
      }
    }
  }
}
