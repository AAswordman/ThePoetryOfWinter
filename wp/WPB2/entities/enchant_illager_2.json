{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "dec:enchant_illager_2",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false
    },

    "component_groups": {
      "minecraft:despawn": {
        "minecraft:instant_despawn": {}
      },
      "minecraft:roar": {
        "minecraft:behavior.knockback_roar": {
          "priority": 1,
          "duration": 2,
          "attack_time": 2,
          "knockback_damage": 5,
          "knockback_strength": 3,
          "knockback_range": 8,
          "damage_filters": {
            "test": "is_family",
            "subject": "other",
            "operator": "!=",
            "value": "monster"
          },
          "on_roar_end": {
            "event": "minecraft:start_attack"
          },
          "cooldown_time": 0.1
        }
      },
      "minecraft:vindicator_aggro": {
        "minecraft:angry": {
          "duration": -1,
          "broadcast_anger": false,
          "calm_event": {
            "event": "minecraft:stop_aggro",
            "target": "self"
          }
        }
      },
      "minecraft:default_targeting": {
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "entity_types": [
            {
              "filters": {  
                  "any_of": [
                    { "test" :  "is_family", "subject" : "other", "value" :  "player"},
                    { "test" :  "is_family", "subject" : "other", "value" :  "snowgolem"},
                    { "test" :  "is_family", "subject" : "other", "value" :  "irongolem"},
                    { "test" :  "is_family", "subject" : "other", "value" :  "wandering_trader"}
                  ] 
              },
              "max_dist": 20
            },
            {
              "filters": {
                "all_of": [
                  { "test": "is_family", "subject": "other", "value": "villager" },
                  { "test": "has_component", "subject": "other", "operator": "!=", "value": "minecraft:is_baby" }
                ]
              },
              "max_dist": 20
            }
          ],
          "must_see": true
        }
      }
    },

    "components": {
      "minecraft:despawn": {
        "despawn_from_distance": {
          "min_distance": 64,
          "max_distance": 64
        }
      },
      "minecraft:boss": {
        "should_darken_sky": false,
        "name":"boss.dec:enchant_illager.name",
        "hud_range": 64
      },
      "minecraft:knockback_resistance": {
        "value": 1
      },
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 300 : 0"
      },
      "minecraft:nameable": {
      },
      "minecraft:type_family": {
        "family": [ "enchant_illager", "monster", "illager", "mob", "boss" ]
      },
      "minecraft:variant": {
        "value": 0
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.9
      },
      "minecraft:health": {
        "value": 400,
        "max": 400
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:attack": {
        "damage": 1
      },
      "minecraft:movement": {
        "value": 0.30
      },
      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "can_pass_doors": true,
        "can_open_doors": true,
        "avoid_water": false
      },
      "minecraft:movement.basic": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:follow_range": {
        "value": 256
      },
      "minecraft:equipment": {
        "table": "loot_tables/entities/enchant_illager_gear.json",
        "slot_drop_chance": [
          {
            "slot": "slot.weapon.mainhand",
            "drop_chance": 0.1
          }
        ]
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/enchant_illager.json"
      },
      "minecraft:behavior.float": {
        "priority": 0
      },
      "minecraft:behavior.melee_attack": {
        "priority": 3,
        "speed_multiplier": 1,
        "track_target": false
      },
      "minecraft:behavior.random_stroll": {
        "priority": 9,
        "speed_multiplier": 1
      },
      "minecraft:behavior.look_at_player": {
        "priority": 10,
        "look_distance": 8,
        "probability": 0.02
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1,
        "entity_types": {
          "filters": {
            "test": "is_family",
            "subject": "other",
            "operator": "!=",
            "value": "ghost"
          },
          "max_dist": 64
        }
      },
      "minecraft:on_target_acquired": {
        "event": "minecraft:become_aggro",
        "target": "self"
      },
      "minecraft:on_target_escape": {
        "event": "minecraft:stop_aggro",
        "target": "self"
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      }
    },

    "events": {
      "minecraft:despawn": {
        "add": {
          "component_groups": [
            "minecraft:despawn"
          ]
        }
      },
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "add": {
              "component_groups": [
                "minecraft:roar"
              ]
            }
          }
        ]
      },
      "minecraft:start_attack": {
        "add": {
          "component_groups": [
            "minecraft:default_targeting"
          ]
        },
        "remove": {
          "component_groups": [
            "minecraft:roar"
          ]
        }
      },
      "minecraft:become_aggro": {
        "add": {
          "component_groups": [
            "minecraft:vindicator_aggro"
          ]
        }
      },
      "minecraft:stop_aggro": {
        "remove": {
          "component_groups": [
            "minecraft:vindicator_aggro"
          ]
        }
      }
    }
  }
}