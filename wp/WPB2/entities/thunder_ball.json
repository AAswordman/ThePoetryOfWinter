{
  "format_version": "1.12.0",
 "minecraft:entity": {
  "description": {
    "identifier": "dec:thunder_ball",
    "runtime_identifier": "minecraft:egg",
    "is_spawnable": false,
    "is_summonable": true,
    "is_experimental": false,
    "scripts":{
      "animate":["ticking"]
    },
      "animations":{
        "ticking":"controller.animation.particle_thunder_wake"
    }
  },

  "component_groups": {
    "minecraft:exploding": {
      "minecraft:transformation": {
        "into": "dec:summon_lightning_bolt"
      }
    }
  },

  "components": {
   "minecraft:collision_box": {
    "width": 0.3,
    "height": 0.3
   },
   "minecraft:explode": {
    "fuseLength": 3,
    "fuseLit": true,
    "power": 1,
    "causesFire": true,
    "destroy_affected_by_griefing": false
    },
   "minecraft:projectile": {
    "onHit": {
      "definition_event": {
        "affect_projectile": true,
        "event_trigger": {
          "event": "minecraft:explode",
          "target": "self"
        }
      },
      "impact_damage": {
        "damage": 4,
        "knockback": false,
        "catchFire": true,
        "semirandomdiffdamage": false
      }
    },
    "power": 1.2,
    "gravity": 0.00,
    "inertia": 1,
    "liquid_inertia": 1,
    "anchor": 1,
    "offset": [ 0, 0.5, 0 ],
    "semirandomdiffdamage": true,
    "uncertaintyBase": 6.0,
    "uncertaintyMultiplier": 6,
    "reflectOnHurt": true,
    "shoot_target": false
   },
   "minecraft:pushable": {
    "is_pushable": false,
    "is_pushable_by_piston": true
   }
  },
  "events": {
   "minecraft:explode": {
    "sequence": [
      {
        "randomize": [
          {
            "weight": 1,
            "add": { "component_groups": [ "minecraft:exploding" ] }
          },
          {
            "weight": 3
          }
        ]
      }
    ]
   }
  }
 }
}
