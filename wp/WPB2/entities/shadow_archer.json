{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "dec:shadow_archer",
      "runtime_identifier": "minecraft:skeleton",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },

    "component_groups": {
      "minecraft:ranged_attack": {
        "minecraft:behavior.ranged_attack": {
          "attack_interval_min": 0.1,
          "attack_interval_max": 4,
          "attack_radius": 64
        },
        "minecraft:shooter": {
          "type": "Arrow",
          "def": "minecraft:arrow"
        },
        "minecraft:environment_sensor": {
          "on_environment": {
            "filters": { "test": "is_underwater", "subject": "self", "operator": "==", "value": true },
            "event": "minecraft:melee_mode"
          }
        }
      },
      "minecraft:melee_attack": {
        "minecraft:behavior.melee_attack": {
          "priority": 4,
          "target_dist": 1.2,
          "speed_multiplier": 1.25,
          "track_target": true
        },
        "minecraft:attack": {
          "damage": 6,
          "effect_name": "blindness",
          "effect_duration": 3
        },
        "minecraft:follow_range": {
          "value": 128,
          "max": 128
        },
        "minecraft:environment_sensor": {
          "on_environment": {
            "filters": { "test": "in_water", "subject": "self", "operator": "==", "value": false },
            "event": "minecraft:ranged_mode"
          }
        }
      }
    },

    "components": {
      "minecraft:breathable": {
        "totalSupply": 15,
        "suffocateTime": 0,
        "breathesWater": true
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.8
      },
      "minecraft:teleport": {
        "randomTeleports": true,
        "maxRandomTeleportTime": 100,
        "randomTeleportCube": [ 16, 16, 16 ],
        "targetDistance": 16,
        "target_teleport_chance": 0.05,
        "lightTeleportChance": 0.05
      },
      "minecraft:nameable": {},
      "minecraft:health": {
        "value": 2,
        "max": 2
      },
      "minecraft:loot": {
        "table": "loot_tables/empty.json"
      },
      "minecraft:movement": {
        "value": 0.3
      },
      "minecraft:navigation.walk": {
        "is_amphibious": true,
        "avoid_sun": true,
        "avoid_water": true
      },
      "minecraft:movement.basic": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:equipment": {
        "table": "loot_tables/entities/shadow_archer_gear.json",
        "slot_drop_chance": [
          {
            "slot": "slot.weapon.mainhand",
            "drop_chance": 0
          }
        ]
      },
      "minecraft:shooter": {
        "type": "Arrow",
        "def": "minecraft:arrow"
      },
      "minecraft:environment_sensor": {
        "on_environment": {
          "filters": { "test": "is_underwater", "subject": "self", "operator": "==", "value": true  },
          "event": "minecraft:melee_mode"
        }
      },
      "minecraft:behavior.ranged_attack": {
        "attack_interval_min": 0.1,
        "attack_interval_max": 4,
        "attack_radius": 64
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "reselect_targets": true,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "player"
            },
            "max_dist": 16
          },
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "villager"
            },
            "max_dist": 16
          },
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "wandering_trader"
            },
            "max_dist": 16
          },
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "irongolem"
            },
            "max_dist": 16
          },
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "baby_turtle"
                },
                {
                  "test": "in_water",
                  "subject": "other",
                  "operator": "!=",
                  "value": true
                }
              ]
            },
            "max_dist": 16
          }
        ],
        "must_see": true
      },

      "minecraft:behavior.flee_sun": {
        "priority": 2,
        "speed_multiplier": 1
      },
      "minecraft:behavior.avoid_mob_type": {
        "priority": 4,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "wolf"
            },
            "max_dist": 6,
            "walk_speed_multiplier": 1.2,
            "sprint_speed_multiplier": 1.2
          }
        ]
      },
      "minecraft:behavior.random_stroll": {
        "priority": 5,
        "speed_multiplier": 1
      },
      "minecraft:behavior.look_at_player": {
        "priority": 6,
        "look_distance": 64
      },
      "minecraft:behavior.random_look_around": {
        "priority": 6
      },
      "minecraft:type_family": {
        "family": [ "monster", "undead", "shadow_archer", "mob" ]
      },
      "minecraft:physics": {
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "minecraft:ranged_attack"
          ]
        }
      },
      "minecraft:melee_mode": {
        "remove": { "component_groups": [ "minecraft:ranged_attack" ] },
        "add": { "component_groups": [ "minecraft:melee_attack" ] }
      },
      "minecraft:ranged_mode": {
        "remove": { "component_groups": [ "minecraft:melee_attack" ] },
        "add": { "component_groups": [ "minecraft:ranged_attack" ] }
      }
    }
  }
}
