    "events": {
      "minecraft:despawn": {
        "add": {
          "component_groups": [
            "minecraft:despawn"
          ]
        }
      },
      "minecraft:die": {
        "run_command": {
          "command": [
            "loot spawn ~~1~ loot \"entities/everlasting_winter_ghast\"",
