{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "dec:everlasting_winter_ghast_anchor",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "minecraft:despawn": {
        "minecraft:instant_despawn": {}
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": [
          "boss",
          "frozen"
        ]
      },
      "minecraft:health": {
        "value": 100000,
        "max": 100000
      },
      "minecraft:knockback_resistance": {
