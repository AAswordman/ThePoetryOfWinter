{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "category": "equipment",
      "identifier": "dec:star_sword"
    },
    "components": {
      "minecraft:creative_category": {
        "parent": "itemGroup.name.sword"
      },
      "minecraft:display_name": {
        "value": "item.dec:star_sword.name"
      },
      "minecraft:icon": {
        "texture": "star_sword"
      },
      "minecraft:weapon": {
        "on_hurt_entity": {
          "event": "attack",
          "target": "self"
        },
        "on_hit_block": {
          "event": "attack",
          "target": "self"
        }
      },
      "minecraft:stacked_by_data": false,
      "minecraft:max_stack_size": 1,
      "minecraft:repairable": {
        "repair_items": [
          {
            "items": [
              "dec:star_debris"
            ],
            "repair_amount": "context.other->query.remaining_durability + query.max_durability * 0.6"
          }
        ]
      },
      "minecraft:durability": {
        "max_durability": 4096
      },
      "minecraft:mining_speed": 1.5,
      "minecraft:damage": 12,
      "minecraft:enchantable": {
        "value": 10,
        "slot": "sword"
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "shoot",
          "target": "self"
        }
      },
      "tag:use_skill_count": {},
      "minecraft:can_destroy_in_creative": false,
      "minecraft:digger": {
        "use_efficiency": true,
        "destroy_speeds": [
          {
            "block": "minecraft:web",
            "speed": 15
          },
          {
            "block": "minecraft:bamboo",
            "speed": 10
          }
        ]
      },
      "minecraft:foil": false,
      "minecraft:hand_equipped": true,
      "tag:comp:equipment_type:melee_weapon":{}
    },
    "events": {
      "attack": {
        "damage": {
          "type": "magic",
          "amount": 1
        }
      },
      "shoot": {
        "sequence": [
          {
            "condition": "query.scoreboard('wbfl') < 15",
            "sequence": [
              {
                "run_command": {
                  "command": [
                    "scoreboard players set @s skill_count 0"
                  ],
                  "target": "holder"
                }
              }
            ]
          },
          {
            "condition": "query.scoreboard('wbfl') >= 15",
            "sequence": [
              {
                "condition": "query.scoreboard('skill_count') < 12",
                "sequence": [
                  {
                    "run_command": {
                      "command": [
                        "scoreboard players add @s skill_count 1"
                      ],
                      "target": "holder"
                    }
                  }
                ]
              },
              {
                "condition": "query.scoreboard('skill_count') == 4 || query.scoreboard('skill_count') == 8",
                "sequence": [
                  {
                    "run_command": {
                      "command": [
                        "function item/star_sword_charge"
                      ],
                      "target": "holder"
                    }
                  }
                ]
              },
              {
                "condition": "query.scoreboard('skill_count') == 12",
                "sequence": [
                  {
                    "run_command": {
                      "command": [
                        "function item/star_sword_shoot"
                      ],
                      "target": "holder"
                    }
                  },
                  {
                    "shoot": {
                      "projectile": "dec:spots_by_sword",
                      "launch_power": 1
                    }
                  },
                  {
                    "shoot": {
                      "projectile": "dec:spots_by_sword",
                      "launch_power": 1.5
                    }
                  },
                  {
                    "shoot": {
                      "projectile": "dec:spots_by_sword",
                      "launch_power": 2
                    }
                  },
                  {
                    "shoot": {
                      "projectile": "dec:spots_by_sword",
                      "launch_power": 2.5
                    }
                  },
                  {
                    "shoot": {
                      "projectile": "dec:spots_by_sword",
                      "launch_power": 3
                    }
                  },
                  {
                    "damage": {
                      "type": "magic",
                      "amount": 1
                    }
                  }
                ]
              },
              {
                "condition": "query.scoreboard('skill_count') >= 12",
                "sequence": [
                  {
                    "run_command": {
                      "command": [
                        "scoreboard players set @s skill_count 0"
                      ],
                      "target": "holder"
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  }
}