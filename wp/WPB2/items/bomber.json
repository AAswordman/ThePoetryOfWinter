{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "category": "equipment",
      "identifier": "dec:bomber"
    },
    "components": {
      "minecraft:creative_category": {
        "parent": "itemGroup.name.sword"
      },
      "minecraft:display_name": {
        "value": "item.dec:bomber.name"
      },
      "minecraft:icon": {
        "texture": "bomber"
      },
      "minecraft:render_offsets": "bow",
      "minecraft:use_animation": "bow",
      "minecraft:stacked_by_data": false,
      "minecraft:max_stack_size": 1,
      "minecraft:foil": false,
      "minecraft:hand_equipped": true,
      "minecraft:cooldown": {
        "category": "gun",
        "duration": 3
      },
      "minecraft:durability": {
        "max_durability": 352
      },
      "minecraft:enchantable": {
        "value": 10,
        "slot": "flintsteel"
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "shoot_test",
          "target": "self"
        }
      },
      "minecraft:use_duration": 0.06,
      "minecraft:chargeable": {
        "movement_modifier":0.7,
        "on_complete": {
         "event": "shoot",
         "target": "self"
        }
      },
      "minecraft:repairable": {
        "repair_items": [
          {
            "items": [
              "dec:lava_ingot"
            ],
            "repair_amount": "context.other->query.remaining_durability + query.max_durability * 0.6"
          }
        ]
      }
    },
    "events": {
      "shoot_test": {
        "run_command": {
          "command": [
            "scoreboard players set @s[hasitem={item=dec:bomber_bullet}] bullet_type 1",
            "scoreboard players set @s[hasitem={item=dec:bomber_bullet,quantity=0}] bullet_type 0"
          ],
          "target": "holder"
        }
      },
      "shoot": {
        "sequence": [
          {
            "condition": "query.scoreboard('bullet_type') == 1",
            "sequence": [
              {
                "run_command": {
                  "command": [
                    "playsound random.explode @a ~~~",
                    "camerashake add @s 3 0.05",
                    "clear @s dec:bomber_bullet 0 1"
                  ],
                  "target": "holder"
                }
              },
              {
                "shoot": {
                  "projectile": "dec:fake_fireball",
                  "launch_power": 1
                }
              },
              {
                "shoot": {
                  "projectile": "dec:fake_fireball",
                  "launch_power": 1
                }
              },
              {
                "shoot": {
                  "projectile": "dec:fake_fireball",
                  "launch_power": 1
                }
              },
              {
                "damage": {
                  "type": "magic",
                  "amount": 1
                }
              }
            ]
          }
        ]
      }
    }
  }
}