        "repair_items": [
          {
            "items": [
              "minecraft:planks"
            ],
            "repair_amount": "context.other->query.remaining_durability + query.max_durability * 0.25"
          }
        ]
      },
      "tag:comp:equipment_type:magic_weapon":{}
