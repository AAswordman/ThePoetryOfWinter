{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "category": "equipment",
      "identifier": "dec:blood_mare"
    },
    "components": {
      "minecraft:creative_category": {
        "parent": "itemGroup.name.sword"
      },
      "minecraft:display_name": {
        "value": "item.dec:blood_mare.name"
      },
      "minecraft:icon": {
        "texture": "blood_mare"
      },
      "minecraft:stacked_by_data": false,
      "minecraft:max_stack_size": 1,
      "minecraft:durability": {
        "max_durability": 376
      },
      "minecraft:damage": 7,
      "minecraft:repairable": {
        "repair_items": [
          {
            "items": [
              "dec:health_stone"
            ],
            "repair_amount": "context.other->query.remaining_durability + query.max_durability * 0.5"
          },
          {
            "items": [
              "dec:health_nugget"
            ],
            "repair_amount": "context.other->query.remaining_durability + query.max_durability * 0.3"
          }
        ]
      },
      "minecraft:mining_speed": 1.5,
      "minecraft:foil": false,
      "minecraft:hand_equipped": true,
      "minecraft:enchantable": {
        "value": 15,
        "slot": "sword"
      },
      "minecraft:can_destroy_in_creative": false,
      "minecraft:digger": {
        "use_efficiency": true,
        "destroy_speeds": [
          {
            "block": "minecraft:web",
            "speed": 15
          },
          {
            "block": "minecraft:bamboo",
            "speed": 10
          }
        ]
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "blood_mare_use_attack",
          "target": "self"
        }
      },
      "minecraft:weapon": {
        "on_hurt_entity": {
          "event": "blood_mare_attack",
          "target": "self"
        },
        "on_hit_block": {
          "event": "attack",
          "target": "self"
        }
      },
      "minecraft:cooldown": {
        "category": "katana",
        "duration": 2
      },
      "tag:comp:equipment_type:melee_weapon":{}
    },
    "events": {
      "attack": {
        "damage": {
          "amount": 1,
          "type": "magic"
        }
      },
      "blood_mare_use_attack": {
        "run_command": {
          "command": [
            "function item/blood_mare"
          ],
          "target": "holder"
        }
      },
      "blood_mare_attack": {
        "sequence": [
          {
            "condition": "query.health <= 2",
            "sequence": [
              {
                "randomize": [
                  {
                    "sequence": [
                      {
                        "run_command": {
                          "command": [
                            "function item/blood_mare_low_health"
                          ],
                          "target": "holder"
                        },
                        "damage": {
                          "type": "magic",
                          "amount": 2
                        }
                      }
                    ],
                    "weight": 3
                  },
                  {
                    "weight": 1
                  }
                ]
              }
            ]
          },
          {
            "condition": "query.scoreboard('skill_count') > 3 && query.health > 2",
            "sequence": [
              {
                "run_command": {
                  "command": [
                    "function item/blood_mare"
                  ],
                  "target": "holder"
                }
              },
              {
                "damage": {
                  "type": "magic",
                  "amount": 1
                }
              }
            ]
          },
          {
            "condition": "query.scoreboard('skill_count') < 4 && query.health > 2",
            "sequence": [
              {
                "run_command": {
                  "command": [
                    "scoreboard players add @s skill_count 1"
                  ],
                  "target": "holder"
                }
              },
              {
                "damage": {
                  "type": "magic",
                  "amount": 1
                }
              }
            ]
          }
        ]
      }
    }
  }
}