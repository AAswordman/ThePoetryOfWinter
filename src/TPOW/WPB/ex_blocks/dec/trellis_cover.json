{
    "format_version": "1.21.60",
    "minecraft:block": {
        "description": {
            "identifier": "dec:trellis_cover",
            "states": {
                "dec:may_wither": [
                    true,
                    false
                ],
                "dec:crop_type": [
                    "empty",
                    "wither",
                    "grape"
                ],
                "dec:growth_stage": [
                    0,
                    1,
                    2,
                    3,
                    4
                ]
            }//,
            // "menu_category": {
            //     "group": "minecraft:itemGroup.name.outside",
            //     "category": "items"
            // }
        },
        "components": {
            "minecraft:movable": {
                "movement_type": "popped"
            },
            "minecraft:redstone_conductivity": {
                "allows_wire_to_step_down": false,
                "redstone_conductor": false
            },
            "minecraft:material_instances": {
                "trellis": {
                    "texture": "trellis",
                    "render_method": "alpha_test"
                },
                "*": {
                    "texture": "trellis",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:geometry": "geometry.trellis_cover",
            "minecraft:breathability": "air",
            "minecraft:selection_box": {
                "origin": [
                    -8,
                    13,
                    -8
                ],
                "size": [
                    16,
                    3,
                    16
                ]
            },
            "minecraft:collision_box": {
                "origin": [
                    -8,
                    13,
                    -8
                ],
                "size": [
                    16,
                    3,
                    16
                ]
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": [
                            "side"
                        ],
                        "block_filter": [
                            "dec:trellis"
                        ]
                    }
                ]
            },
            "minecraft:map_color": "#7A4F29",
            "minecraft:loot": "loot_tables/blocks/trellis_cover.json",
            "minecraft:light_emission": 0.0,
            "minecraft:light_dampening": 0.0,
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.7
            },
            "minecraft:tags": {
                "tags": [
                    "wood"
                ]
            }
        },
        "permutations": [
            {
                "condition": "query.block_state('dec:crop_type') == 'empty'",
                "components": {
                    "minecraft:material_instances": {
                        "trellis": {
                            "texture": "trellis",
                            "render_method": "alpha_test"
                        },
                        "crop": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        },
                        "*": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') != 'empty'",
                "components": {
                    "minecraft:on_interact": {
                        "event": "interact"
                    },
                    "minecraft:material_instances": {
                        "trellis": {
                            "texture": "trellis",
                            "render_method": "alpha_test"
                        },
                        "*": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') != 'empty' && query.block_state('dec:crop_type') != 'wither'",
                "components": {
                    "minecraft:on_interact": {
                        "event": "interact"
                    },
                    "minecraft:random_ticking": {
                        "on_tick": {
                            "event": "grow"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') == 'wither'",
                "components": {
                    "minecraft:material_instances": {
                        "trellis": {
                            "texture": "trellis",
                            "render_method": "alpha_test"
                        },
                        "crop": {
                            "texture": "trellis_crop_wither",
                            "render_method": "alpha_test"
                        },
                        "*": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') == 'grape' && query.block_state('dec:growth_stage') == 0",
                "components": {
                    "minecraft:material_instances": {
                        "crop": {
                            "texture": "grape_crop_0",
                            "render_method": "alpha_test"
                        },
                        "trellis": {
                            "texture": "trellis",
                            "render_method": "alpha_test"
                        },
                        "*": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('dec:crop_type') == 'grape' && query.block_state('dec:growth_stage') == 1",
                "components": {
                    "minecraft:material_instances": {
                        "crop": {
                            "texture": "grape_crop_1",
                            "render_method": "alpha_test"
                        },
                        "trellis": {
                            "texture": "trellis",
                            "render_method": "alpha_test"
                        },
                        "*": {
                            "texture": "empty",
                            "render_method": "alpha_test"
                        }
                    }
                }
            }
        ],
        "events": {
            "interact": {
                "sequence": [
                    {
                        "condition": "query.get_equipped_item_name('main_hand') == 'shears'",
                        "sequence": [
                            {
                                "decrement_stack": {},
                                "set_block_state": {
                                    "dec:crop_type": "'empty'"
                                }
                            }
                        ]
                    },
                    {
                        "condition": "query.get_equipped_item_name('main_hand') == 'bone_meal'",
                        "sequence": [
                            {
                                "decrement_stack": {},
                                "run_command": {
                                    "command": [
                                        "particle minecraft:crop_growth_emitter ~~~"
                                    ]
                                },
                                "trigger": {
                                    "event": "grow"
                                }
                            }
                        ]
                    }
                ]
            },
            "grow": {
                "sequence": [
                    {
                        "condition": "query.block_state('dec:crop_type') == 'grape' && query.block_state('dec:growth_stage') < 1", //作物多了这里写三元运算符
                        "sequence": [
                            {
                                "condition": "!query.block_state('dec:may_wither')",
                                "sequence": [
                                    {
                                        "set_block_state": {
                                            "dec:growth_stage": "query.block_state('dec:growth_stage') + 1"
                                        }
                                    }
                                ]
                            },
                            {
                                "condition": "query.block_state('dec:may_wither')",
                                "sequence": [
                                    {
                                        "set_block_state": {
                                            "dec:crop_type": "'wither'",
                                            "dec:growth_stage": 0
                                        }
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "condition": "query.block_state('dec:crop_type') == 'grape' && query.block_state('dec:growth_stage') == 1", //作物多了这里写三元运算符
                        "sequence": [
                            {
                                "condition": "query.block_state('dec:may_wither')",
                                "sequence": [
                                    {
                                        "set_block_state": {
                                            "dec:crop_type": "'wither'",
                                            "dec:growth_stage": 0
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    }
}