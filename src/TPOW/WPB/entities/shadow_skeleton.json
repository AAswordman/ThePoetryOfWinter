{
	"format_version": "1.13.0",
	"minecraft:entity": {
		"description": {
			"identifier": "dec:shadow_skeleton",
			"runtime_identifier": "minecraft:skeleton",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false
		},
		"component_groups": {
			"minecraft:despawn": {
				"minecraft:instant_despawn": {}
			},
			"minecraft:from_night_event": {
				"minecraft:environment_sensor": {
					"triggers": {
						"filters": {
							"test": "is_daytime",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"event": "minecraft:despawn"
					}
				}
			},
			"minecraft:summon": {
				"minecraft:timer": {
					"looping": true,
					"time": 7,
					"time_down_event": {
						"event": "minecraft:summon_start"
					}
				}
			}
		},
		"components": {
			"minecraft:behavior.hurt_by_target": {
				"priority": 1,
				"entity_types": {
					"filters": {
						"test": "is_family",
						"subject": "other",
						"operator": "!=",
						"value": "shadow"
					},
					"max_dist": 64
				}
			},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "fall",
						"deals_damage": false
					},
					{
						"on_damage": {
							"filters": {
								"test": "is_family",
								"subject": "other",
								"value": "shadow"
							}
						},
						"deals_damage": false
					}
				]
			},
			"minecraft:on_target_acquired": {
				"event": "minecraft:has_target",
				"target": "self"
			},
			"minecraft:on_target_escape": {
				"event": "minecraft:lost_target",
				"target": "self"
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? 10 + (query.equipment_count * Math.Random(4,9)) : 0"
			},
			"minecraft:type_family": {
				"family": [
					"shadow",
					"skeleton",
					"undead",
					"monster",
					"mob"
				]
			},
			"minecraft:despawn": {
			  "despawn_from_distance": {}
			},
			"minecraft:loot": {
				"table": "loot_tables/entities/shadow_skeleton.json"
			},
			"minecraft:nameable": {},
			"minecraft:health": {
				"value": {
					"range_min": 22,
					"range_max": 30
				}
			},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 4
					}
				]
			},
			"minecraft:physics": {
				"has_gravity": false
			},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0,
				"breathes_air": true,
				"breathes_water": false
			},
			"minecraft:collision_box": {
				"width": 0.6,
				"height": 1.9
			},
			"minecraft:movement": {
				"value": 1.8
			},
			"minecraft:movement.glide": {
				"start_speed": 0.1,
				"speed_when_turning": 0.2
			},
			"minecraft:follow_range": {
				"value": 64,
				"max": 64
			},
			"minecraft:behavior.look_at_player": {
				"priority": 0,
				"look_distance": 64
			},
			"minecraft:behavior.random_look_around": {
				"priority": 6
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 0,
				"within_radius": 64,
				"reselect_targets": true,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "player"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "snowgolem"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "irongolem"
								}
							]
						},
						"max_dist": 64
					},
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "villager"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "wandering_trader"
								}
							]
						},
						"max_dist": 64,
						"must_see": false
					}
				],
				"must_see": true
			},
			"minecraft:behavior.circle_around_anchor": {
				"radius_range": [
					10.0,
					15.0
				],
				"radius_change_chance": 250,
				"height_above_target_range": [
					1.0,
					2.0
				],
				"height_offset_range": [
					-4.0,
					5.0
				],
				"height_change_chance": 350,
				"goal_radius": 1.0
			}
		},
		"events": {
			"minecraft:despawn": {
				"add": {
					"component_groups": [
						"minecraft:despawn"
					]
				}
			},
			"minecraft:from_night_event": {
				"trigger": "minecraft:entity_spawned",
				"add": {
					"component_groups": [
						"minecraft:from_night_event"
					]
				}
			},
			"minecraft:summon_start": {
				"run_command": {
					"command": [
						"summon dec:shadow_skeleton_puppet ~~~ 0 0 minecraft:timer"
					]
				}
			},
			"minecraft:has_target": {
				"add": {
					"component_groups": [
						"minecraft:summon"
					]
				}
			},
			"minecraft:lost_target": {
				"remove": {
					"component_groups": [
						"minecraft:summon"
					]
				}
			}
		}
	}
}