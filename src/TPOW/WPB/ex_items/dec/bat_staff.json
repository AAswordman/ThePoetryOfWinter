{
    "format_version": "1.21.94",
    "minecraft:item": {
        "description": {
            "identifier": "dec:bat_staff",
            "menu_category": {
                "group": "dec:itemGroup.name.staffs",
                "is_hidden_in_commands": false,
                "category": "equipment"
            }
        },
        "components": {
            "minecraft:display_name": {
                "value": "item.dec:bat_staff.name"
            },
            "minecraft:stacked_by_data": false,
            "minecraft:max_stack_size": 1,
            "minecraft:hand_equipped": true,
            "minecraft:on_use": {
                "on_use": {
                    "event": "shoot",
                    "target": "self"
                }
            },
            "minecraft:cooldown": {
                "category": "staff",
                "duration": 0.9
            },
            "minecraft:durability": {
                "max_durability": 98
            },
            "minecraft:enchantable": {
                "value": 10,
                "slot": "flintsteel"
            },
            "minecraft:repairable": {
                "repair_items": [
                    {
                        "items": [
                            "minecraft:planks"
                        ],
                        "repair_amount": "context.other->query.remaining_durability + query.max_durability * 0.25"
                    }
                ]
            },
            "minecraft:tags": {
                "tags": [
                    "comp:equipment_type:summon_weapon_:summon_weapon:_"
                ]
            },
            "minecraft:icon": {
                "textures": {
                    "default": "bat_staff"
                }
            }
        },
        "events": {
            "attack": {
                "damage": {
                    "type": "magic",
                    "amount": 1
                }
            },
            "shoot": {
                "sequence": [
                    {
                        "condition": "query.scoreboard('wbfl') > 4",
                        "sequence": [
                            {
                                "run_command": {
                                    "command": [
                                        "playsound break.amethyst_block @a ~~~",
                                        "particle dec:summon_staff_spawn ^^1.6^1.3",
                                        "scoreboard players remove @s wbfl 4",
                                        "playanimation @s animation.humanoid.staff_use"
                                    ],
                                    "target": "holder"
                                }
                            },
                            {
                                "shoot": {
                                    "launch_power": 1,
                                    "projectile": "dec:little_bat"
                                }
                            },
                            {
                                "damage": {
                                    "type": "magic",
                                    "amount": 1
                                }
                            }
                        ]
                    }
                ]
            }
        }
    }
}