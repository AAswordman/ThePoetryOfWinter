{
    "format_version": "1.21.94",
    "minecraft:item": {
        "description": {
            "identifier": "dec:flare_magic_book",
            "menu_category": {
                "group": "dec:itemGroup.name.magic_books",
                "is_hidden_in_commands": false,
                "category": "equipment"
            }
        },
        "components": {
            "minecraft:display_name": {
                "value": "item.dec:flare_magic_book.name"
            },
            "minecraft:fuel": {
                "duration": 20
            },
            "minecraft:stacked_by_data": false,
            "minecraft:max_stack_size": 1,
            "minecraft:hand_equipped": false,
            "minecraft:on_use": {
                "on_use": {
                    "event": "shoot",
                    "target": "self"
                }
            },
            "minecraft:repairable": {
                "repair_items": [
                    {
                        "items": [
                            "dec:star_debris"
                        ],
                        "repair_amount": "context.other->query.remaining_durability + query.max_durability * 0.6"
                    }
                ]
            },
            "minecraft:enchantable": {
                "value": 20,
                "slot": "flintsteel"
            },
            "minecraft:durability": {
                "max_durability": 4096
            },
            "minecraft:tags": {
                "tags": [
                    "use_skill_count",
                    "comp:equipment_type:magic_weapon_:magic_book:_"
                ]
            },
            "minecraft:icon": {
                "textures": {
                    "default": "flare_magic_book"
                }
            }
        },
        "events": {
            "attack": {
                "damage": {
                    "type": "magic",
                    "amount": 1
                }
            },
            "shoot": {
                "sequence": [
                    {
                        "condition": "query.scoreboard('wbfl') > 6 && query.scoreboard('skill_count') > 4",
                        "sequence": [
                            {
                                "run_command": {
                                    "command": [
                                        "particle dec:fire_powering_particle ~~0.5~",
                                        "playsound fire.fire @a ~~~",
                                        "playsound mob.blaze.shoot @a ~~~",
                                        "scoreboard players remove @s wbfl 6",
                                        "playanimation @s animation.humanoid.staff_use"
                                    ],
                                    "target": "holder"
                                }
                            },
                            {
                                "shoot": {
                                    "projectile": "dec:spots_by_book",
                                    "launch_power": 1,
                                    "delay_ticks": 0
                                }
                            },
                            {
                                "damage": {
                                    "type": "magic",
                                    "amount": 1
                                }
                            }
                        ]
                    },
                    {
                        "condition": "query.scoreboard('skill_count') >= 10",
                        "sequence": [
                            {
                                "run_command": {
                                    "command": [
                                        "scoreboard players set @s skill_count 0"
                                    ],
                                    "target": "holder"
                                }
                            }
                        ]
                    },
                    {
                        "condition": "query.scoreboard('skill_count') <= 12",
                        "sequence": [
                            {
                                "run_command": {
                                    "command": [
                                        "scoreboard players add @s skill_count 1"
                                    ],
                                    "target": "holder"
                                }
                            },
                            {
                                "randomize": [
                                    {
                                        "shoot": {
                                            "projectile": "dec:spots_overflow",
                                            "launch_power": 1,
                                            "delay_ticks": 0
                                        },
                                        "weight": 4
                                    },
                                    {
                                        "sequence": [
                                            {
                                                "shoot": {
                                                    "projectile": "dec:spots_overflow",
                                                    "launch_power": 1,
                                                    "delay_ticks": 0
                                                }
                                            },
                                            {
                                                "shoot": {
                                                    "projectile": "dec:spots_overflow",
                                                    "launch_power": 1,
                                                    "delay_ticks": 10
                                                }
                                            }
                                        ],
                                        "weight": 2
                                    },
                                    {
                                        "sequence": [
                                            {
                                                "shoot": {
                                                    "projectile": "dec:spots_overflow",
                                                    "launch_power": 1,
                                                    "delay_ticks": 0
                                                }
                                            },
                                            {
                                                "shoot": {
                                                    "projectile": "dec:spots_overflow",
                                                    "launch_power": 1,
                                                    "delay_ticks": 10
                                                }
                                            },
                                            {
                                                "shoot": {
                                                    "projectile": "dec:spots_overflow",
                                                    "launch_power": 1,
                                                    "delay_ticks": 20
                                                }
                                            }
                                        ],
                                        "weight": 1
                                    },
                                    {
                                        "weight": 9
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "condition": "query.scoreboard('skill_count') == 2 || query.scoreboard('skill_count') == 4",
                        "sequence": [
                            {
                                "run_command": {
                                    "command": [
                                        "playsound fire.fire @a ~~~",
                                        "particle dec:fire_powering_particle ~~0.5~",
                                        "playanimation @s animation.humanoid.sword_charge"
                                    ],
                                    "target": "holder"
                                }
                            }
                        ]
                    }
                ]
            }
        }
    }
}